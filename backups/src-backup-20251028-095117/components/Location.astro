---
import { weddingContent } from '../config/wedding-content';
---

<section id="location" class="py-20 px-4 bg-white">
	<div class="max-w-6xl mx-auto">
		<h2 class="text-4xl md:text-5xl font-serif font-light text-center text-neutral-800 mb-12">
			Location & Travel
		</h2>

		<div class="grid md:grid-cols-2 gap-8 mb-12">
			<div class="bg-neutral-50 rounded-lg p-8">
				<h3 class="text-2xl font-medium text-neutral-800 mb-4">Getting There</h3>
				
				<div class="space-y-4 text-neutral-700">
					<div>
						<h4 class="font-semibold mb-2">Driving</h4>
						<p>{weddingContent.travel.driving}</p>
					</div>
					
					<div>
						<h4 class="font-semibold mb-2">Public Transit</h4>
						<p>{weddingContent.travel.publicTransit}</p>
					</div>
					
					<div>
						<h4 class="font-semibold mb-2">Taxi / Rideshare</h4>
						<p>{weddingContent.travel.taxiRideshare}</p>
					</div>
					
					<div>
						<h4 class="font-semibold mb-2">Parking</h4>
						<p>{weddingContent.travel.parking}</p>
					</div>
				</div>
			</div>

			<div class="rounded-lg overflow-hidden shadow-md">
				<iframe
					src={weddingContent.venue.mapUrl}
					width="100%"
					height="100%"
					style="border:0; min-height: 400px;"
					allowfullscreen=""
					loading="lazy"
					referrerpolicy="no-referrer-when-downgrade"
				></iframe>
			</div>
		</div>
	</div>
</section>
