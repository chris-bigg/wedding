---
import { weddingContent } from '../config/wedding-content';
---

<section id="faq" class="py-20 px-4 bg-white">
	<div class="max-w-3xl mx-auto">
		<h2 class="text-4xl md:text-5xl font-serif font-light text-center text-neutral-800 mb-12">
			Frequently Asked Questions
		</h2>

		<div class="space-y-4">
			{weddingContent.faqs.map((faq, index) => (
				<details class="bg-neutral-50 rounded-lg overflow-hidden group">
					<summary class="cursor-pointer p-6 font-medium text-lg text-neutral-800 hover:bg-neutral-100 transition-colors flex justify-between items-center">
						{faq.question}
						<span class="text-2xl group-open:rotate-45 transition-transform">+</span>
					</summary>
					<div class="px-6 pb-6 text-neutral-700">
						{faq.answer}
					</div>
				</details>
			))}
		</div>
	</div>
</section>
