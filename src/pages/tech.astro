	<nav class="fixed top-0 left-0 right-0 bg-white/80 backdrop-blur-md shadow-sm z-50 border-b border-stone-200/50">
		<div class="max-w-6xl mx-auto px-4 py-3">
			<div class="flex justify-between items-center">
				<a href={baseUrl || '/'} class="text-emerald-800 hover:text-emerald-600 transition-colors font-medium">
					‚Üê Back to Wedding
				</a>
			</div>
		</div>
	</nav>

