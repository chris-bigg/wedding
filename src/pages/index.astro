---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Story from '../components/Story.astro';
import Details from '../components/Details.astro';
import Location from '../components/Location.astro';
import Accommodation from '../components/Accommodation.astro';
import FAQ from '../components/FAQ.astro';
import Gift from '../components/Gift.astro';
import RSVPForm from '../components/RSVPForm';
import PersonalizedGreeting from '../components/PersonalizedGreeting';
import DarkModeToggle from '../components/DarkModeToggle';
import Navigation from '../components/Navigation';
import SplashScreen from '../components/SplashScreen';
import FloralAnimation from '../components/FloralAnimation';
import WeatherWidget from '../components/WeatherWidget';
import MusicPlayer from '../components/MusicPlayer';
import SectionAnimations from '../components/SectionAnimations';
import { weddingContent } from '../config/wedding-content';
---

<Layout title={`${weddingContent.couple.name1} & ${weddingContent.couple.name2} | Wedding`}>
	<!-- Splash Screen -->
	<SplashScreen client:load />

	<!-- Music Player -->
	<MusicPlayer client:load />

	<!-- Navigation -->
	<Navigation client:load />

	<!-- Main Content -->
	<main id="main-content">
		<Hero />
		<PersonalizedGreeting client:load />
		<Story />
		<Details />
		<Location />
		<Accommodation />
		<FAQ />
		<Gift />
		<RSVPForm client:load />
	</main>

	<!-- Floral Animation -->
	<FloralAnimation client:visible />

	<!-- Section Animations -->
	<SectionAnimations client:load />

    <!-- Footer -->
    <footer class="bg-gradient-to-br from-green-950 to-stone-900 dark:from-stone-950 dark:to-stone-900 text-stone-200 dark:text-stone-300 py-4 md:py-6 px-4 relative">
        <div class="w-full flex flex-col md:flex-row items-center md:items-center md:justify-between gap-4">
            <!-- Weather Widget -->
            <div class="w-full md:w-auto md:self-stretch flex md:block justify-center">
                <WeatherWidget client:load />
            </div>
            <!-- Footer Text -->
            <div class="text-center md:text-right md:ml-auto">
                <p class="mb-1 md:mb-2">For questions, please contact us at <a href={`mailto:${weddingContent.contact.email}`} class="text-green-700 dark:text-white hover:text-green-700 dark:hover:text-stone-200 hover:underline transition-colors">{weddingContent.contact.email}</a></p>
                <p class="text-sm">{new Date().getFullYear()} {weddingContent.couple.name1} & {weddingContent.couple.name2}</p>
            </div>
        </div>
		<!-- Nerdy Stuff CTA -->
		<a 
			href={`${import.meta.env.BASE_URL}tech`}
            class="fixed right-4 md:right-6 z-50 bg-stone-800/80 hover:bg-stone-700/90 backdrop-blur-sm text-stone-200 px-3 md:px-4 py-2 rounded-full text-sm font-medium shadow-lg hover:shadow-xl hover:scale-105 border border-stone-600/50"
            style="bottom: var(--cta-bottom, 1.5rem); transition: background-color 300ms, box-shadow 300ms;"
			title="View tech stack"
		>
			ðŸ¤“ Nerdy stuff
		</a>
	</footer>
</Layout>
