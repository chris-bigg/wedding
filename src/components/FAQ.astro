---
import { weddingContent } from '../config/wedding-content';
---

<section id="faq" class="py-20 px-4 bg-gradient-to-br from-stone-50 via-[#F3F7F1]/60 to-[#E8F2E6]/50 dark:from-stone-900/30 dark:via-stone-900/20 dark:to-stone-950/30">
	<div class="max-w-3xl mx-auto">
		<h2 class="text-5xl md:text-6xl text-center mb-12 overflow-visible" style="font-family: 'Great Vibes', cursive; font-weight: 400; line-height: 1.3; padding: 0.5rem 0;">
			<span class="inline-block bg-gradient-to-r from-emerald-600 to-emerald-800 dark:from-emerald-400 dark:to-emerald-600 bg-clip-text text-transparent px-4">
				Frequently Asked Questions
			</span>
		</h2>

		<div class="space-y-4">
			{weddingContent.faqs.map((faq, index) => (
				<details class="bg-white/60 dark:bg-stone-800/60 backdrop-blur-sm rounded-2xl overflow-hidden group border border-stone-200/50 dark:border-stone-700/50 shadow-md hover:shadow-lg transition-all">
					<summary class="cursor-pointer p-6 font-medium text-lg text-emerald-800 dark:text-emerald-400 hover:bg-emerald-50/50 dark:hover:bg-emerald-950/30 transition-colors flex justify-between items-center">
						{faq.question}
						<span class="text-2xl text-emerald-600 dark:text-emerald-400 group-open:rotate-45 transition-transform">+</span>
					</summary>
					<div class="px-6 pb-6 text-stone-700 dark:text-stone-300">
						{faq.answer}
					</div>
				</details>
			))}
		</div>
	</div>
</section>
