---
import { weddingContent } from '../config/wedding-content';
import AccommodationCarousel from './AccommodationCarousel';
import AccommodationHero from './AccommodationHero';
---

<section id="accommodation" class="py-20 px-4 bg-gradient-to-br from-[#F2F4F0]/40 via-[#E6E8E2]/30 to-green-50/40 dark:from-stone-900/30 dark:via-stone-900/20 dark:to-stone-950/30">
	<div class="max-w-6xl mx-auto">
		<h2 class="text-5xl md:text-6xl text-center mb-12 overflow-visible" style="font-family: 'Mon de Tresor', serif; font-weight: 400; line-height: 1.3; padding: 0.5rem 0;" data-animate-title>
			<span class="inline-block bg-gradient-to-r from-green-800 to-green-950 dark:from-white dark:to-stone-200 bg-clip-text text-transparent px-4">
				Where to Stay
			</span>
		</h2>

		<!-- Hero Card with Room Slideshow -->
		<div data-animate-fade-up>
			<AccommodationHero client:load />
		</div>

		<!-- Archived Carousel - Hidden for now -->
		<div data-animate-fade-up style="display: none;">
			<AccommodationCarousel client:load accommodation={weddingContent.accommodation} />
		</div>
		
		<div class="mt-2 flex flex-col sm:flex-row gap-4 justify-center items-center flex-wrap" data-animate-stagger>
			<a 
				href="https://www.airbnb.com/s/Cirencester--UK/homes?checkin=2026-08-01&checkout=2026-08-02"
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex items-center justify-center w-14 h-14 rounded-full bg-white/70 dark:bg-stone-800/70 backdrop-blur-sm border-2 border-green-800 dark:border-white/30 hover:bg-green-50 dark:hover:bg-stone-700/70 transition-all duration-300 shadow-md hover:shadow-lg"
				data-stagger-item
				aria-label="Book on Airbnb"
			>
				<img src="/images/hotels/Airbnb_Red.svg" alt="Airbnb" class="w-6 h-6" />
			</a>
			<a 
				href="https://www.booking.com/searchresults.en-gb.html?ss=Cirencester%2C+Gloucestershire%2C+United+Kingdom&checkin=2026-08-01&checkout=2026-08-02&group_adults=2&no_rooms=1&group_children=0"
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex items-center justify-center w-14 h-14 rounded-full bg-white/70 dark:bg-stone-800/70 backdrop-blur-sm border-2 border-green-800 dark:border-white/30 hover:bg-green-50 dark:hover:bg-stone-700/70 transition-all duration-300 shadow-md hover:shadow-lg"
				data-stagger-item
				aria-label="Book on Booking.com"
			>
				<img src="/images/hotels/Booking2022.svg" alt="Booking.com" class="w-6 h-6" />
			</a>
			<a 
				href="https://www.premierinn.com/gb/en/hotels/england/gloucestershire/cirencester/cirencester.html?ARRdd=31&ARRmm=07&ARRyyyy=2026&NIGHTS=2&ROOMS=1&ADULT1=2&CHILD1=0&COT1=0&INTTYP1=DB"
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex items-center justify-center w-14 h-14 rounded-full bg-white/70 dark:bg-stone-800/70 backdrop-blur-sm border-2 border-green-800 dark:border-white/30 hover:bg-green-50 dark:hover:bg-stone-700/70 transition-all duration-300 shadow-md hover:shadow-lg"
				data-stagger-item
				aria-label="Book at Premier Inn"
			>
				<img src="/images/hotels/PL.svg" alt="Premier Inn" class="w-8 h-8" />
			</a>
			<a 
				href="https://www.travelodge.co.uk/hotels/86/Cirencester-hotel?checkIn=31/07/2026&checkOut=02/08/2026&rooms[0][adults]=2&rooms[0][children]=0"
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex items-center justify-center w-14 h-14 rounded-full bg-white/70 dark:bg-stone-800/70 backdrop-blur-sm border-2 border-green-800 dark:border-white/30 hover:bg-green-50 dark:hover:bg-stone-700/70 transition-all duration-300 shadow-md hover:shadow-lg"
				data-stagger-item
				aria-label="Book at Travelodge"
			>
				<img src="/images/hotels/TL.svg" alt="Travelodge" class="w-8 h-8" />
			</a>
		</div>
	</div>
</section>
