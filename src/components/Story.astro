---
import { weddingContent } from '../config/wedding-content';
---

<section id="story" class="py-20 px-4 bg-gradient-to-br from-[#F2F4F0]/60 via-[#E6E8E2]/50 to-stone-50 dark:from-stone-900/30 dark:via-stone-900/20 dark:to-stone-950/30">
	<div class="max-w-6xl mx-auto">
		<!-- Mobile: Stacked layout -->
		<div class="md:hidden">
		<h2 class="text-5xl md:text-6xl text-center mb-12 overflow-visible" style="font-family: 'Mon de Tresor', serif; font-weight: 400; line-height: 1.3; padding: 0.5rem 0;" data-animate-title>
			<span class="inline-block bg-gradient-to-r from-green-800 to-green-950 dark:from-white dark:to-stone-200 bg-clip-text text-transparent px-4">
				{weddingContent.story.title}
			</span>
		</h2>
			<div class="prose prose-lg mx-auto text-stone-700 dark:text-stone-300 leading-relaxed mb-8" data-animate-text>
				<p>{weddingContent.story.content}</p>
			</div>
			<div class="flex justify-center">
				<div class="relative group max-w-lg w-full" data-animate-image>
					<div class="absolute inset-0 bg-gradient-to-br from-green-600/20 to-[#F2F4F0]/30 rounded-2xl blur-xl group-hover:blur-2xl transition-all duration-500"></div>
					<div class="relative overflow-hidden rounded-2xl shadow-2xl border-4 border-white/50 dark:border-stone-700/50 backdrop-blur-sm">
						<img 
							src="/images/us/engagement.jpg"
							alt="Chris & Feleena engagement photo"
							class="w-full h-auto object-cover transform group-hover:scale-105 transition-transform duration-700 ease-out"
							loading="lazy"
						/>
						<!-- Decorative corner accents -->
						<div class="absolute top-0 left-0 w-16 h-16 border-t-4 border-l-4 border-green-700/40 rounded-tl-2xl"></div>
						<div class="absolute bottom-0 right-0 w-16 h-16 border-b-4 border-r-4 border-green-700/40 rounded-br-2xl"></div>
					</div>
				</div>
			</div>
		</div>

		<!-- Desktop: Side-by-side layout -->
		<div class="hidden md:grid md:grid-cols-2 gap-12 items-center">
			<!-- Left: Text -->
			<div>
		<h2 class="text-5xl lg:text-6xl mb-8 overflow-visible" style="font-family: 'Mon de Tresor', serif; font-weight: 400; line-height: 1.3; padding: 0.5rem 0;" data-animate-title>
			<span class="inline-block bg-gradient-to-r from-green-800 to-green-950 dark:from-white dark:to-stone-200 bg-clip-text text-transparent px-4">
				{weddingContent.story.title}
			</span>
		</h2>
				<div class="prose prose-lg lg:prose-xl text-stone-700 dark:text-stone-300 leading-relaxed" data-animate-left>
					<p>{weddingContent.story.content}</p>
				</div>
			</div>
			
			<!-- Right: Image -->
			<div class="flex justify-center" data-animate-right>
				<div class="relative group w-full">
					<div class="absolute inset-0 bg-gradient-to-br from-green-600/20 to-[#F2F4F0]/30 rounded-2xl blur-xl group-hover:blur-2xl transition-all duration-500"></div>
					<div class="relative overflow-hidden rounded-2xl shadow-2xl border-4 border-white/50 dark:border-stone-700/50 backdrop-blur-sm">
						<img 
							src="/images/us/engagement.jpg"
							alt="Chris & Feleena engagement photo"
							class="w-full h-auto object-cover transform group-hover:scale-105 transition-transform duration-700 ease-out"
							loading="lazy"
						/>
						<!-- Decorative corner accents -->
						<div class="absolute top-0 left-0 w-16 h-16 border-t-4 border-l-4 border-green-700/40 rounded-tl-2xl"></div>
						<div class="absolute bottom-0 right-0 w-16 h-16 border-b-4 border-r-4 border-green-700/40 rounded-br-2xl"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
