---
import { weddingContent } from '../config/wedding-content';
import HeroBackground from './HeroBackground';
import HeroTitle from './HeroTitle';
import HeroContent from './HeroContent';
---

<section id="home" class="min-h-screen flex items-center justify-center px-4 pt-20 relative overflow-hidden">
	<!-- Background Image -->
	<HeroBackground client:load />
	
	<!-- Decorative elements -->
	<div class="absolute inset-0 opacity-20 dark:opacity-10 z-10">
		<div class="absolute top-20 left-10 w-64 h-64 bg-emerald-200/40 dark:bg-emerald-800/30 rounded-full blur-3xl"></div>
		<div class="absolute bottom-20 right-10 w-96 h-96 bg-[#F3F7F1]/60 dark:bg-[#F3F7F1]/10 rounded-full blur-3xl"></div>
	</div>
	
	<div class="text-center relative z-20 px-4">
		<HeroTitle client:load name1={weddingContent.couple.name1} name2={weddingContent.couple.name2} />
		<HeroContent client:load dateText={weddingContent.date.full} venueName={weddingContent.venue.name} />
	</div>
</section>
