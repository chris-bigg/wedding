---
import { weddingContent } from '../config/wedding-content';
import HoneymoonModal from './HoneymoonModal';
---

<section id="gift" class="py-20 px-4 bg-gradient-to-br from-green-50/40 via-[#F2F4F0]/50 to-[#E6E8E2]/40 dark:from-stone-900/20 dark:via-stone-900/15 dark:to-stone-950/20">
	<div class="max-w-6xl mx-auto">
		<div class="bg-white/70 dark:bg-stone-800/70 backdrop-blur-sm rounded-3xl shadow-2xl border border-stone-200/50 dark:border-stone-700/50 overflow-hidden" data-animate-fade-up>
			<div class="grid md:grid-cols-2 gap-0">
				<!-- Left: Content -->
				<div class="p-8 md:p-12 flex flex-col justify-center" data-animate-left>
					<h2 class="text-5xl md:text-6xl mb-6 overflow-visible" style="font-family: 'Mon de Tresor', serif; font-weight: 400; line-height: 1.3;">
						<span class="inline-block px-4">
							<span class="bg-gradient-to-r from-green-800 to-green-950 dark:from-white dark:to-stone-200 bg-clip-text text-transparent">Honeym</span>
							<span class="inline-flex items-center relative" style="margin-left: -0.25em; margin-right: -0.25em;">
								<span class="relative z-10 bg-gradient-to-r from-green-800 to-green-950 dark:from-white dark:to-stone-200 bg-clip-text text-transparent" style="transform: translateX(0.08em);">O</span>
								<span class="relative bg-gradient-to-r from-green-800 to-green-950 dark:from-white dark:to-stone-200 bg-clip-text text-transparent" style="margin-left: -0.3em; z-0; transform: translateX(-0.08em);">O</span>
							</span>
							<span class="bg-gradient-to-r from-green-800 to-green-950 dark:from-white dark:to-stone-200 bg-clip-text text-transparent">n Fund</span>
						</span>
					</h2>

					<p class="text-lg text-stone-700 dark:text-stone-300 mb-8 leading-relaxed" set:html={weddingContent.gift.message} />

					<HoneymoonModal client:load />
				</div>

				<!-- Right: Image -->
				<div class="relative h-64 md:h-auto" data-animate-right>
					<img 
						src="/images/croatia.jpg"
						alt="Croatia honeymoon destination"
						class="w-full h-full object-cover"
						loading="lazy"
					/>
					<div class="absolute inset-0 bg-gradient-to-t from-green-950/20 to-transparent"></div>
				</div>
			</div>
		</div>
	</div>
</section>
