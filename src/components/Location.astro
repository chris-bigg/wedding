---
import { weddingContent } from '../config/wedding-content';
---

<section id="location" class="py-20 px-4 bg-gradient-to-br from-[#F3F7F1]/50 via-[#E8F2E6]/40 to-emerald-50/30 dark:from-stone-900/30 dark:via-stone-900/20 dark:to-stone-950/30">
	<div class="max-w-6xl mx-auto">
		<h2 class="text-5xl md:text-6xl text-center mb-12 overflow-visible" style="font-family: 'Great Vibes', cursive; font-weight: 400; line-height: 1.3; padding: 0.5rem 0;">
			<span class="inline-block bg-gradient-to-r from-emerald-600 to-emerald-800 dark:from-emerald-400 dark:to-emerald-600 bg-clip-text text-transparent px-4">
				Location & Travel
			</span>
		</h2>

		<div class="grid md:grid-cols-2 gap-8 mb-12">
			<div class="bg-white/60 dark:bg-stone-800/60 backdrop-blur-sm rounded-2xl p-8 border border-stone-200/50 dark:border-stone-700/50 shadow-md">
				<h3 class="text-2xl font-medium text-emerald-800 dark:text-emerald-400 mb-4">Getting There</h3>
				
				<div class="space-y-4 text-stone-700 dark:text-stone-300">
					<div>
						<h4 class="font-semibold mb-2 text-emerald-700 dark:text-emerald-400">Driving</h4>
						<p>{weddingContent.travel.driving}</p>
					</div>
					
					<div>
						<h4 class="font-semibold mb-2 text-emerald-700 dark:text-emerald-400">Public Transit</h4>
						<p>{weddingContent.travel.publicTransit}</p>
					</div>
					
					<div>
						<h4 class="font-semibold mb-2 text-emerald-700 dark:text-emerald-400">Taxi / Rideshare</h4>
						<p>{weddingContent.travel.taxiRideshare}</p>
					</div>
					
					<div>
						<h4 class="font-semibold mb-2 text-emerald-700 dark:text-emerald-400">Parking</h4>
						<div set:html={weddingContent.travel.parking} />
					</div>
				</div>
			</div>

			<div class="rounded-2xl overflow-hidden shadow-lg border border-stone-200/50">
				<iframe
					src={weddingContent.venue.mapUrl}
					width="100%"
					height="100%"
					style="border:0; min-height: 400px;"
					allowfullscreen=""
					loading="lazy"
					referrerpolicy="no-referrer-when-downgrade"
				></iframe>
			</div>
		</div>
	</div>
</section>
