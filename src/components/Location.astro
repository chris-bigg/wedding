---
import { weddingContent } from '../config/wedding-content';
---

<section id="location" class="py-20 px-4 bg-gradient-to-br from-[#F2F4F0]/50 via-[#E6E8E2]/40 to-green-50/30 dark:from-stone-900/30 dark:via-stone-900/20 dark:to-stone-950/30">
	<div class="max-w-6xl mx-auto">
		<h2 class="text-5xl md:text-6xl text-center mb-12 overflow-visible" style="font-family: 'Mon de Tresor', serif; font-weight: 400; line-height: 1.3; padding: 0.5rem 0;" data-animate-title>
			<span class="inline-block bg-gradient-to-r from-green-800 to-green-950 dark:from-white dark:to-stone-200 bg-clip-text text-transparent px-4">
				Location and Travel
			</span>
		</h2>

		<div class="grid md:grid-cols-2 gap-8 mb-12">
			<div class="bg-white/60 dark:bg-stone-800/60 backdrop-blur-sm rounded-2xl p-8 border border-stone-200/50 dark:border-stone-700/50 shadow-md" data-animate-left>
				<h3 class="text-2xl font-medium text-green-950 dark:text-white mb-4">Getting There</h3>
				
				<div class="space-y-4 text-stone-700 dark:text-stone-300" data-animate-stagger>
					<div data-stagger-item>
						<h4 class="font-semibold mb-2 text-green-900 dark:text-white">Driving</h4>
						<div set:html={weddingContent.travel.driving} />
					</div>
					
					<div data-stagger-item>
						<h4 class="font-semibold mb-2 text-green-900 dark:text-white">Public Transport</h4>
						<div set:html={weddingContent.travel.publicTransport} />
					</div>
					
					<div data-stagger-item>
						<h4 class="font-semibold mb-2 text-green-900 dark:text-white">Taxi</h4>
						<div set:html={weddingContent.travel.taxi} />
					</div>
					
					<div data-stagger-item>
						<h4 class="font-semibold mb-2 text-green-900 dark:text-white">Parking</h4>
						<div set:html={weddingContent.travel.parking} />
					</div>
				</div>
			</div>

			<div class="rounded-2xl overflow-hidden shadow-lg border border-stone-200/50 relative" data-animate-right>
				<iframe
					src={weddingContent.venue.mapUrl}
					width="100%"
					height="100%"
					style="border:0; min-height: 400px;"
					allowfullscreen=""
					loading="lazy"
					referrerpolicy="no-referrer-when-downgrade"
					title="Interactive map showing Kings Head Hotel location in Cirencester"
				></iframe>
				<div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-10">
					<a
						href={weddingContent.venue.directionsUrl}
						aria-label="Get directions to Kings Head Hotel"
						target="_blank"
						rel="noopener noreferrer"
						class="inline-flex items-center gap-2 bg-green-800 hover:bg-green-900 dark:bg-white/90 dark:hover:bg-white text-white dark:text-stone-900 px-6 py-3 rounded-full font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105"
					>
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
							<path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
						</svg>
						Get Directions
					</a>
				</div>
			</div>
		</div>
	</div>
</section>
